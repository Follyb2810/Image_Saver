{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=FileStorageDb;Trusted_Connection=True;MultipleActiveResultSets=true"
  },

  "AllowedHosts": "*",
  "FileStorage": {
    "UploadPath": "uploads",
    "BaseUrl": "https://localhost:7000",
    "MaxFileSize": 104857600,
    "AllowedExtensions": [
      ".jpg",
      ".jpeg",
      ".png",
      ".gif",
      ".bmp",
      ".webp",
      ".pdf",
      ".doc",
      ".docx",
      ".txt",
      ".rtf",
      ".mp4",
      ".avi",
      ".mov",
      ".wmv",
      ".mp3",
      ".wav",
      ".ogg"
    ]
  }
}
